@page
@model Capstone.Pages.MyPageModel
@{
}

<body>
    <style>
        .my-page {
            background-color: lightgray;
        }

        .mypage {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .user-type {
            font-size: 18px;
            color: #555;
        }
    </style>

    <div class="mypage">
        <div class="name">@Model.Name</div>
        <div class="user-type">@Model.DisplayingUserType</div>
    </div>

    <div class="Posts">
        <h3>작성한 게시글</h3>
        <ul>
            @{
                if (ViewData["Posts"] != null)
                {
                    List<ListEntity> posts = (List<ListEntity>)ViewData["Posts"];

                    foreach (ListEntity entity in posts)
                    {
                        @Html.Raw(entity.ShowData());
                    }
                }
            }
        </ul>
    </div>

    <div class="Comments">
        <h3>작성한 댓글</h3>
        <ul>
            @{
                if (ViewData["Comments"] != null)
                {
                    List<ListEntity> comments = (List<ListEntity>)ViewData["Comments"];

                    foreach (ListEntity entity in comments)
                    {
                        @Html.Raw(entity.ShowData());
                    }
                }
            }
        </ul>
    </div>
</body>