@page
@model Capstone.Pages.LifeInfo.TourModel

@{
    Layout = "_LifeInfoGridLayout.cshtml";
}

<body>
    <style>
        .Tour {
            background-color: lightgray;
        }

        .card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .card .card-body {
            opacity: 0;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
        }

        .card:hover .card-body {
            opacity: 1;
        }

        .card:hover .card-image {
            opacity: 0.1;
        }
    </style>
</body>