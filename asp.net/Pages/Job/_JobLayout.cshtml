@{
    Layout = "../Shared/_GridPageLayout.cshtml";
}

@section lsection {

    <style>
        .job {
            background-color: lightgray;
        }

        .sidebar-tap :hover {
            background-color: lightgray;
        }

        /* 좌측바 스타일 */
        .sidebar-header {
            min-width: 200px; /* 좌측바의 고정된 너비 */
            background-color: #FFFFFF;
            color: black;
            padding: 20px;
            box-sizing: border-box;
            text-align: center;
        }

            .sidebar-header h2 {
                border-bottom: 2px solid #000; /* 검은색 가로선 */
                padding-bottom: 10px;
                width: 100%;
            }
    </style>

    <div class="sidebar">
        <!-- 좌측바 -->
        <div class="sidebar-header">
            <h2>취업</h2>
        </div>

        <ul>
            <li class="sidebar-tap">
                <a asp-page="JobPages" class="job-pages">
                    취업 정보 사이트
                </a>
            </li>

            <li class="sidebar-tap">
                <a asp-page="JobCollection" class="job-collection">
                    공고 모음
                </a>
            </li>
        </ul>
    </div>
}

@RenderBody()